

/*----------------------下の枠---------------------*/

jQuery(window).bind("load", function(){
	var url   = location.href;
	var today = new Date();

	var startday20171017a= new Date('2018/04/10 00:00:00');
	var endday20171017a= new Date('2018/04/10 23:59:59');
	var pointup20171017a=
	'<div id="20171017a" class=""><a href="https://item.rakuten.co.jp/shopjapan/c/0000000596/" target="_blank"><img src="https://www.rakuten.ne.jp/gold/shopjapan/trcs/css/trcs_p_bnr_sp.png" width="100%"></a></div>'
    if((document.URL.match("https://www.rakuten.ne.jp/gold/shopjapan/sp/")||document.URL.match("https://item.rakuten.co.jp/shopjapan/"))
	&&( startday20171017a < today && today < endday20171017a)){		
	jQuery('#offer-notification-cart,#itemImageSlider,#head_coupon').append(pointup20171017a);
	}else{
	}
});



